        @*<dt>
            @Html.DisplayNameFor(model => model.fecha_modificacion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fecha_modificacion)
        </dd>*@

        @*<dt>
            @Html.DisplayNameFor(model => model.nombre_cliente)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre_cliente)
        </dd>*@

    </dl>
</div>
<p class="text-center col-md-offset-2 col-md-10">
    @Html.ActionLink("Editar", "Edit", new { id = Model.id_area }, new { @class = "btn btn-success" }) 
    @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-danger" })
