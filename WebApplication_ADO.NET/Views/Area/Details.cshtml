@model WebApplication_ADO.NET.Models.Area

@{
    ViewBag.Title = "Details";
}

<h2>Detalle Area</h2>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show fade-out" role="alert">
        <strong>Error: </strong> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div>
    @*<h4>Area</h4>*@
    <hr />
    <dl class="dl-horizontal">

        <div class="form-group row mb-2">
            <dt class="control-label col-md-2 mb-2 negrita">
                @Html.DisplayNameFor(model => model.descripcion)
            </dt>

            <dd class="col-md-10">
                @Html.DisplayFor(model => model.descripcion)
            </dd>
        </div>
        @*<dt>
            @Html.DisplayNameFor(model => model.descripcion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.descripcion)
        </dd>*@

        <div class="form-group row mb-2">
            <dt class="control-label col-md-2 mb-2 negrita">
                @Html.DisplayNameFor(model => model.nombre_cliente)
            </dt>

            <dd class="col-md-10">
                @Html.DisplayFor(model => model.nombre_cliente)
            </dd>
        </div>

        @*<dt>
            @Html.DisplayNameFor(model => model.id_cliente)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.id_cliente)
        </dd>*@

        <div class="form-group row mb-2">
            <dt class="control-label col-md-2 mb-2 negrita">
                @Html.DisplayNameFor(model => model.enu_estado_registro)
            </dt>

            <dd class="col-md-10">
                @{
                    char estado = Model.enu_estado_registro;
                    string estadoTexto = (estado.ToString() == "A") ? "Activo" : (estado.ToString() == "I") ? "Inactivo" : estado.ToString();
                }
                @estadoTexto
            </dd>
        </div>

        @*<dt>
            @Html.DisplayNameFor(model => model.enu_estado_registro)
        </dt>

        <dd>
